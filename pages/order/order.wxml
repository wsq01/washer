
<!--index.wxml-->
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">未付款</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已付款</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">已完成</view>
</view>
<view class="empty" wx:if="{{orders.length==0}}">
  <view>没有订单！</view>
</view>
<swiper wx:elif="{{orders.length!=0}}" current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">

  <!-- 全部 -->
  <swiper-item hidden="{{showItem?false:true}}">
    <scroll-view scroll-y style="height:100%">
      <view class="myOrder" wx:for="{{orders}}">
        <view class="myOrder_item" data-status="{{item.status}}" data-order-id="{{item.id}}" bindtap="showTime">
          <view>
            <image src="../../images/o1.png" class="item_pic"></image>
          </view>
          <view class="item_info">
            <view>
              <text>{{item.addr}}</text>
              <text>{{item.starttime}}</text>
            </view>
            <text>{{item.mode}}</text>
          </view>
          <view class="item_status">
            <text>{{item.status}}</text>
            <text>￥{{item.amount}}</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </swiper-item>

  <!-- 未付款 -->
  <swiper-item>
    <scroll-view scroll-y style="height:100%">
      <view class="myOrder" wx:for="{{orders}}">
        <block wx:if="{{item.status==='未付款'}}">
          <view class="myOrder_item">
            <view>
              <image src="../../images/o1.png" class="item_pic"></image>
            </view>
            <view class="item_info">
              <view>
                <text>{{item.addr}}</text>
                <text>{{item.starttime}}</text>
              </view>
              <text>{{item.mode}}</text>
            </view>
            <view class="item_status">
              <text>{{item.status}}</text>
              <text>￥{{item.amount}}</text>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
  </swiper-item>

  <!-- 已付款 -->
  <swiper-item>
    <scroll-view scroll-y style="height:100%">
      <view class="myOrder" wx:for="{{orders}}">
        <block wx:if="{{item.status==='已付款'}}">
          <view class="myOrder_item">
            <view>
              <image src="../../images/o1.png" class="item_pic"></image>
            </view>
            <view class="item_info">
              <view>
                <text>{{item.addr}}</text>
                <text>{{item.starttime}}</text>
              </view>
              <text>{{item.mode}}</text>
            </view>
            <view class="item_status">
              <text>{{item.status}}</text>
              <text>￥{{item.amount}}</text>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
  </swiper-item>

  <!-- 已完成-->
  <swiper-item>
    <scroll-view scroll-y style="height:100%">
      <view class="myOrder" wx:for="{{orders}}">
        <block wx:if="{{item.status==='已完成'}}">
          <view class="myOrder_item">
            <view>
              <image src="../../images/o1.png" class="item_pic"></image>
            </view>
            <view class="item_info">
              <view>
                <text>{{item.addr}}</text>
                <text>{{item.starttime}}</text>
              </view>
              <text>{{item.mode}}</text>
            </view>
            <view class="item_status">
              <text>{{item.status}}</text>
              <text>￥{{item.amount}}</text>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
  </swiper-item>
</swiper>