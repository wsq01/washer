<view class="container">
  <view class="login_item login_tel">
    <label class="label_item">手机号码</label>
    <input type="number" placeholder="填写手机号码" class="input_item" maxlength="11" bindinput="bindTelInput" />
    <view class="send_captcha" bindtap="send_captcha">
      <button class="login_button" size="mini" disabled="{{sendBtn}}">{{VerifyCode}}</button>
    </view>
  </view>
  <view class="login_item">
    <label class="label_item">验证码</label>
    <input type="number" placeholder="输入验证码" maxlength="4" class="input_item" bindinput="bindCodeInput" />
  </view>
  <button class="login_btn" bindtap="login_submit">用户注册</button>
  <view class="login_foot">
    <text>点击登录,即表示已阅读并同意《洗衣服务条款》</text>
  </view>
</view>