/* pages/login/login.wxss */
page{
    background-color: #e5e2e3;
    height: 100%;
}
.container{
    display: flex;
    flex-direction: column;
}
.login_item{
    background-color: white;
    height: 100rpx;
    position: relative;
}
.login_tel{
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 54rpx;
    border-bottom: 1px solid #ccc;
}
.input_item{
    height: 100rpx;
    padding: 0 0 0 200rpx;
    line-height: 100rpx;
    font-size: 35rpx;
}
.label_item{
    line-height: 100rpx;
    position: absolute;
    left: 20rpx;
    top: 0;
}
.login_btn{
    background-color: #6e51a1;
    color:white;
    font-weight: bold;
    margin: 80rpx 33rpx 0;
}
.login_foot{
    font-size: 25rpx;
    margin: 20rpx 0 0 0;
    align-self: center;
    color:#ccc;
}
.send_captcha{
    position: absolute;
    /*color: #d3d1d2;*/
    right: 20rpx;
    top: 24rpx;
    z-index: 10;
}