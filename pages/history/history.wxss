page{
  background-color:#f3f1f2;
}
.topup_bg{
  background-color: #fff;
}
.topup_content{
  padding: 0 30rpx;
}
.topup_list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid rgb( 222, 224, 225 );
  font-size: 30rpx;
}
.header{
  font-size: 35rpx;
  font-weight: bold;
}
.topup_list view:nth-child(1){
  flex: 2;
}
.topup_list view:nth-child(2){
  flex: 6;
}
.topup_list view:nth-child(3){
  flex: 3;
}