.pattern_top{
    width: 100%;
    height: 272rpx;
    background-color: #e6e6ea;
}
.pattern_top image{
  width: 100%;
  height: 272rpx;
}
.pattern_content{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  margin: 42rpx 22rpx 0 22rpx;
}
.pattern_content .pattern_item{
  width: 211rpx;
  height: 284rpx;
  position: relative;
  margin: 0 13rpx;
}
.pattern_item .pattern_title{
  display: block;
  width: 100%;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
}
.pattern_item image{
  display: block;
  width: 100%;
  height: 213rpx;
}
.pattern_item .pattern_money{
  position: absolute;
  left: 0;
  bottom: 70rpx;
  color: #3c495a;
  font-size: 39rpx;
  width: 100%;
  text-align: center;
}
.pattern_item .pattern_time{
  color: #53637a;
  font-size: 26rpx;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
}
.pattern_btn{
  margin: 60rpx 0 0 0;
}
.confirmBtn {
  border-radius: 7px;
  background-color: rgb( 79, 193, 233 );
  width: 224rpx;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}