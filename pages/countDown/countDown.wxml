<view class="container">
    <view class="surplusTime">
        <text>{{clock}}</text>
        <view>剩余时间</view>
    </view>
    <view class="orderInfo">
        <view class="info_icon">
            <image src="{{avatar}}"></image>
        </view>
        <view class="info_line"></view>
        <view class="info_detail">
            <text>使用设备：{{address}}</text>
            <text>支付时间：{{time_pay}}</text>
            <text>支付金额：{{total_pay}}元</text>
            <text>优惠金额：{{discount}}元</text>
        </view>
    </view>
</view>